<mvc:View controllerName="logaligroup.SAPUI5.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true">
    <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button icon="sap-icon://action" press=".onOpenDialog" class="sapUiSmallMarginEnd" width="auto" />
            <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd" width="auto" />
            <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%" />
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor" />
        </content>
        <core:Fragment fragmentName="logaligroup.SAPUI5.view.Form01" type="XML" />
    </Panel>
</mvc:View>
